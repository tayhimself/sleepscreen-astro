---
const { data } = Astro.props
---

<div class="my-8 lg:my-12 flex flex-col mx-auto">
  <div class="flex flex-row mx-auto justify-center items-center">
    <div class="grow-0 shrink-0 px-2">
      <a href={data.frontmatter.bio_link}>
        <img src={data.frontmatter.image} class="w-24 lg:w-32 rounded-full shadow-2xl" alt={data.frontmatter.title} />
      </a>
    </div>
    <div class="px-4 flex-grow-0">
      <h3 class="text-xl font-bold">{data.frontmatter.title}</h3>
      {data.Content ? <data.Content /> : <Fragment set:html={data.body} />}
    </div>
  </div>
</div>
